<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Politics, Life and the Rest</title>
 <link href="http://tomerfiliba.com/opinions/atom.xml" rel="self"/>
 <link href="http://tomerfiliba.com/opinions/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://tomerfiliba.com/opinions/</id>
 <author>
   <name>Tomer Filiba</name>
